<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQueue">

    <TextView
        android:layout_marginBottom="40dp"
        android:text="Craete Task"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/edit_name_task" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_name_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="30dp"
        android:paddingStart="18dp"
        android:textColor="@color/black"
        android:hint="Task name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/edit_description_task"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_description_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="40dp"
        android:paddingStart="18dp"
        android:textColor="@color/black"
        android:hint="Task description"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/btn_create_task" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginBottom="272dp"
        android:background="@color/purple_200"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>